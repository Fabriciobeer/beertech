                <li><%= link_to "Atualizar estoque primário", new_estoquemp_path %>
                </li>
                <li><%= link_to "Análise", analise1_path %>
                </li>
                <li><%= link_to "Cadastro de matéria-prima", new_materiaprima_path %>
                </li>
              </ul>
            </li>
          <% end %>
          <% if logged_in? && (current_user.cliente.estoque_final == "Sim") %>
            <li><a><i class="fa fa-edit"></i> Serviço 2: Estoque de produtos finalizados <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to "Estoque de produto atual", estoquefinal_path(id: current_user.cliente_id) %>
                </li>
                <li><%= link_to "Atualizar estoque final", new_estoquefinal_path %>
                </li>
                <li><%= link_to "Análise", analise2_path %>
                </li>
                <li><%= link_to "Cadastrar produto", new_item_path %>
                </li>
              </ul>
            </li>
          <% end %>
