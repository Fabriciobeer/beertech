<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Edição de item</h3>
      </div>
    </div>
    <%= form_for(@item) do |f| %>
      <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
    
          <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <div class="field">
              <%= f.label :nome_cervejaria %><br>
              <input type="text" class="form-control" readonly="readonly" placeholder= <%= current_user.cliente.nome_cervejaria %> >
            </div>
            <div class="field">
              <%= f.label :Produto %><br>
              <%= f.text_field :item_name, class: "form-control", placeholder: "Nome do produto", autofocus: true %>
            </div>
            <div class="field">
              <%= f.label :Capacidade_do_barril %><br>
              <%= f.select :tamanho_barril, ["5L", "10L", "15L", "20L", "30L", "50L"] %>
            </div>
            <div class="field">
              <%= f.label :Codigo_de_barras %><br>
              <%= f.text_field :barcode, class: "form-control", placeholder: "Código de barras", autofocus: true %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "Editar item", class: 'btn btn-primary btn-lg' %>
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
      </div>
    <% end %>
    <div class="clearfix"></div>
  </div>
  <div class="clearfix"></div>
</div>
<div class="clearfix"></div>
<script>
  $("form").on("keypress", function (e) {
    if (e.keyCode == 13) {
        return false;
    }
});
</script>