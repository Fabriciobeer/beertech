<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Cadastro de novo produto do estoque final</h3>
      </div>
    </div>
    <%= form_for(@item) do |f| %>
      <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
    
          <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <div class="field">
              <%= f.label :id_cervejaria %><br>
              <input type="text" class="form-control" readonly="readonly" placeholder= <%= current_user.cliente.nome_cervejaria %> >
            </div>
            <div class="field">
              <%= f.label :Produto %><br>
              <%= f.text_field :item, class: "form-control", placeholder: "Nome do produto", autofocus: true %>
            </div>
            <div class="field">
              <%= f.label :Codigo_de_barras %><br>
              <%= f.text_field :barcode, class: "form-control", placeholder: "Código de barras", autofocus: true %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "Adicionar produto", class: 'btn btn-primary btn-lg' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="clearfix"></div>
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Receitas cadastradas para a cervejaria <%= current_user.cliente.nome_cervejaria %></h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <table id="datatable-responsive4" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Id</th>
                <th>Nome do produto registrado</th>
                <th>Código de barras associado ao produto</th>
              </tr>
            </thead>
            <tbody>
              <% item = Item.where(cliente_id: current_user.cliente_id) %>
              <% item.each do |itens| %>
                <tr>
                  <th><%= itens.id %></th>
                  <th><%= itens.item %></th>
                  <th><%= itens.barcode %></th>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
