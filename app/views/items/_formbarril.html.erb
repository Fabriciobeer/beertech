<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Cadastro de novo barril</h3>
      </div>
    </div>
    <%= form_for(@item) do |f| %>
      <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
    
          <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <div class="field">
              <%= f.label :nome_cervejaria %><br>
              <input type="text" class="form-control" readonly="readonly" placeholder= <%= current_user.cliente.nome_cervejaria %> >
            </div>
            <div class="field">
              <%= f.label :Produto %><br>
              <%= f.text_field :item_name, class: "form-control", placeholder: "Nome do produto", autofocus: true %>
            </div>
            <div class="field">
              <%= f.label :Capacidade_do_barril %><br>
              <%= f.select :tamanho_barril, ["5L", "10L", "15L", "20L", "30L", "50L"] %>
            </div>
            <div class="field">
              <%= f.label :Codigo_de_barras %><br>
              <%= f.text_field :barcode, class: "form-control", placeholder: "Código de barras", autofocus: true %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "Adicionar item", class: 'btn btn-primary btn-lg' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="clearfix"></div>
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Produtos cadastrados para a cervejaria <%= current_user.cliente.nome_cervejaria %></h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <table id="datatable-responsive4" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Nome do item registrado</th>
                <th>Capacidade do barril</th>
                <th>Código de barras associado ao produto</th>
                <th>Editar</th>
                <th>Deletar</th>
              </tr>
            </thead>
            <tbody>
              <% item = Item.where(cliente_id: current_user.cliente_id) %>
              <% item.each do |itens| %>
                <% if (itens.item_name.include? "arril") || (itens.item_name.include? "cilindro") || (itens.item_name.include? "chopeira") %>
                <tr>
                  <td><%= itens.item_name %></td>
                  <td><%= itens.tamanho_barril %></td>
                  <td><%= itens.barcode %></td>
                  <td><%= link_to 'Editar', editbarril_path(itens) %></td>
                  <% if current_user.nivel_usuario == "admin" %>
                    <td><%= link_to 'Delete', item_path(itens), method: :delete, data: {confirm: "Você tem certeza?"} %></td>
                  <% else %>
                    <td>opção não disponível</td>
                  <% end %>
                </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
<script>
  $("form").on("keypress", function (e) {
    if (e.keyCode == 13) {
        return false;
    }
});
</script>