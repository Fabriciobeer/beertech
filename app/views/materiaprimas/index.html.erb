<p id="notice"><%= notice %></p>

<h1>Listing Materiaprimas</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Item</th>
      <th>Unidades</th>
      <th>Tamanho pacote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materiaprimas.each do |materiaprima| %>
      <tr>
        <td><%= materiaprima.cliente_id %></td>
        <td><%= materiaprima.item %></td>
        <td><%= materiaprima.unidades %></td>
        <td><%= materiaprima.tamanho_pacote %></td>
        <td><%= link_to 'Show', materiaprima %></td>
        <td><%= link_to 'Edit', edit_materiaprima_path(materiaprima) %></td>
        <td><%= link_to 'Destroy', materiaprima, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

